@model IEnumerable<Do_an_co_so.Models.Blog>
@inject Do_an_co_so.Data.Do_an_co_soContext db


@{
    ViewData["Title"] = "Blogdetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section End -->
<!-- Hero Section End -->
<!-- Hero Section End -->
<!-- Blog Details Hero Begin -->
<section class="blog-details-hero set-bg" data-setbg="/img/blog/details/details-hero.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="blog__details__hero__text">
                    <h2>Thưởng thức một món ăn ngon là cách tốt nhất để giải tỏa stress. Hãy ghé quán em để trải nghiệm menu ăn vặt tuyệt vời nhất.</h2>
                    <ul>
                        <li>Đặc sản địa phương</li>
                        <li>200 Comments</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Details Hero End -->
<!-- Blog Details Section Begin -->
<section class="blog-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-5 order-md-1 order-2">
                <div class="blog__sidebar">
                    <div class="blog__sidebar__search">
                        <form action="#">
                            <input type="text" placeholder="Bạn muốn tìm thứ gì?">
                            <button type="submit"><span class="icon_search"></span></button>
                        </form>
                    </div>
                    <div class="blog__sidebar__item">
                        <h4>Danh mục</h4>
                        <ul>
                            <li><a href="#">Tất cả</a></li>
                            @await Component.InvokeAsync("navbarcategory")
                            
                           
                        </ul>
                    </div>
               
                    <div class="blog__sidebar__item">
                        <h4>Bản tin mới nhất</h4>
                        <div class="blog__sidebar__recent">
                            @foreach (var item in db.Blog.OrderByDescending(p => p.BlogDateCreated).Take(3)){
                            <a href="#" class="blog__sidebar__recent__item">
                                <div class="blog__sidebar__recent__item__pic">
                                    <img src="/img/main/products/@item.BlogImage" alt="">
                                </div>
                                <div class="blog__sidebar__recent__item__text">
                                    <h6>@item.BlogName</h6>
                                    <span>@item.BlogDateCreated</span>
                                </div>
                            </a>
                           }
                        </div>
                    </div>
                    <div class="blog__sidebar__item">
                        <h4>Tìm kiếm</h4>
                        <div class="blog__sidebar__item__tags">
                            <a href="#">Apple</a>
                            <a href="#">Beauty</a>
                            <a href="#">Vegetables</a>
                            <a href="#">Fruit</a>
                            <a href="#">Healthy Food</a>
                            <a href="#">Lifestyle</a>
                        </div>
                    </div>
                    
                </div>
            </div>
            <div class="col-lg-8 col-md-7 order-md-1 order-1">
            @foreach (var ite in db.Blog.OrderByDescending(p => p.BlogDateCreated).Take(1)){
                <div class="blog__details__text">
                    <h3>@ite.BlogName</h3>
                    <br>
                    <img src="/img/main/products/@ite.BlogImage" alt="">
                    <p>
                        @ite.BlogContent
                    </p>
                    <br>
                   <p>@ite.BlogDateCreated</p>
                </div>
            }
        </div>
    </div>
</section>
<!-- Blog Details Section End -->
<!-- Related Blog Section Begin -->
<section class="related-blog spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title related-blog-title">
                    <h2>
                        Bản tin bạn có thể thích
                    </h2>
                </div>
            </div>
        </div>
        <div class="row">
             @foreach (var item in db.Blog.OrderByDescending(p => p.BlogContent).Take(3)){
                  <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="blog__item">
                        <div class="blog__item__pic">
                            <img src="/img/main/products/@item.BlogImage" alt="">
                        </div>
                        <div class="blog__item__text">
                            <ul>
                                <li><i class="fa fa-calendar-o"></i> @item.BlogDateCreated</li>
                                <li><i class="fa fa-comment-o"></i> 5</li>
                            </ul>
                            <h5><a href="#">@item.BlogName</a></h5>
                            <p>@item.BlogContent</p>
                        </div>
                    </div>
            </div>
            }
           
        </div>
    </div>
</section>
<!-- Related Blog Section End -->
